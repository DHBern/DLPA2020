    <text>
        <front>
            <head>Acteurs</head>
            <castList xmlns="http://www.tei-c.org/ns/1.0">
                <castItem xml:id="jourdain">
                    <role>MONSIEUR JOURDAIN</role>
                    <roleDesc>Bourgeois</roleDesc>
                </castItem>
                <castItem xml:id="maitremusique">
                    <role>MAISTRE DE MUSIQUE</role>
                </castItem>
            </castList>
        </front>
        <body>
            <div type="act">
                <head>ACT PREMIER</head>
                <div type="scene">
                    <head>SCENE PREMIERE</head>
                    <sp who="#maitremusique">
                        <speaker>MAISTRE DE MUSIQUE </speaker>
                        <stage>(parlant à ses musiciens)</stage>
                        <p>Venez, entrez dans cette Salle, &amp; vous reposez-là, en attendant qu'il vienne</p>
                    </sp>
                </div>
            </div>
        </body>
